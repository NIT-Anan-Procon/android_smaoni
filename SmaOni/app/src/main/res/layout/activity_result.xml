<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/result_layout"
    tools:context="jp.ac.anan_nct.smaoni_elide.activity.ResultActivity">

    <TextView
        android:text="結果発表"
        android:textColor="#ffff0000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/result_title"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
    />

    <jp.ac.anan_nct.smaoni_elide.view.ResultView
        android:layout_below="@+id/result_title"
        android:id="@+id/result1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

</RelativeLayout>

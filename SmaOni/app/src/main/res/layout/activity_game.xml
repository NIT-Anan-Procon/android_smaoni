<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/gamelayout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.ac.anan_nct.smaoni_elide.activity.GameActivity"
    android:background="@drawable/ic_launcher">



    <jp.ac.anan_nct.smaoni_elide.view.MapView
        android:id="@+id/map1"
        android:layout_width="wrap_content"
        android:layout_height="328dp"/>


    <jp.ac.anan_nct.smaoni_elide.view.RankingView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/gameRanking"
        android:layout_below="@+id/map1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:background="#00000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:id="@+id/timerView"
        android:background="#ff9de0ff"
        android:textSize="30dp"

        android:layout_alignParentBottom="true" />


</RelativeLayout>